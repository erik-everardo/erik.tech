@page
@model AdminIndexModel
@{
    Layout = "Layout_login";
    ViewData["title"] = "Inicie sesión";
}

<div class="row">
    <div class="col-12">
        <h2>erik.tech<br>Autores</h2>
    </div>
</div>
<div class="row">
<div class="col-3"></div>
<div class="col-6" id="celda_media">
    <a asp-page="/Index" name><i class="fas fa-arrow-left"></i></a><h1>Iniciar sesión</h1>
    <p>Inicia sesión para poder redactar. <a href="#">Más información</a></p>
    
    <form id="login" class="text-center" asp-antiforgery="true">
        <div class="form-group">
            <input name="username" id="usuario" type="text" class="form-control entradas_login" placeholder="Nombre de usuario">
        </div>
        
        <div class="form-group">
            <input name="password" type="password" class="form-control entradas_login" placeholder="Contraseña">
        </div>
        <div class="form-group">
            <input type="submit" class="form-control btn btn-primary" value="Iniciar sesión">
        </div>
    </form>
    <p>Si aun no tienes una cuenta, <a asp-page="/registro">crea una ahora</a></p>
    
</div>
<div class="col-3"></div>
</div>
